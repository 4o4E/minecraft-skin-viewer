<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <!-- 全局属性 -->
    <properties>
        <property name="logDir">logs</property>
        <property name="pattern">%highlight{[%d{HH:mm:ss}/%-5level] %m%n}{ERROR=RED, WARN=Yellow, INFO=Green, DEBUG=Cyan, TRACE=White}
        </property>
        <property name="accessPattern">[%d{HH:mm:ss}] %m%n</property>
        <property name="filePattern">[%d{HH:mm:ss.SSS}] [%logger/%-5level] %m%n</property>
    </properties>

    <!-- appender -->
    <Appenders>
        <!-- 控制台 -->
        <Console name="console">
            <!-- 文件输出所有消息 -->
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <!-- 输出格式 -->
            <PatternLayout pattern="${pattern}"/>
        </Console>

        <!-- 主要日志 -->
        <RollingFile name="mainFile" fileName="latest.log" filePattern="${logDir}/main/%d{yyyy.MM.dd}-%i.log.gz">
            <!-- 文件输出所有消息 -->
            <!--<ThresholdFilter level="ALL" onMatch="ACCEPT" onMismatch="ACCEPT"/>-->
            <!-- 输出格式 -->
            <PatternLayout pattern="${filePattern}"/>
            <Policies>
                <!-- 按时间拆分 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- 启动时触发拆分规则 -->
                <OnStartupTriggeringPolicy/>
                <!-- 按大小进行拆分 -->
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <!-- 同目录下文件上限 -->
            <DefaultRolloverStrategy max="50"/>
        </RollingFile>
    </Appenders>

    <!-- logger -->
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="console"/>
            <AppenderRef ref="mainFile"/>
        </Root>
    </Loggers>
</Configuration>
